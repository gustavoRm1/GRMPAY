# Configurações de Produção - WebBot Multi-Tenant
# Copie este arquivo para .env e ajuste os valores

# ===== CONFIGURAÇÕES GERAIS =====
NODE_ENV=production
PORT=3001

# ===== BANCO DE DADOS =====
DB_HOST=localhost
DB_PORT=3306
DB_USER=webbot
DB_PASSWORD=your_secure_password_here
DB_NAME=web_bot_multi_tenant

# ===== SEGURANÇA =====
JWT_SECRET=your_very_secure_jwt_secret_minimum_32_characters_long
ENCRYPTION_KEY=your_encryption_key_exactly_32_characters_long

# ===== ADMIN PADRÃO =====
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@webbot.com
ADMIN_PASSWORD=your_secure_admin_password_here

# ===== FRONTEND =====
REACT_APP_API_URL=https://api.webbot.com
REACT_APP_WS_URL=wss://api.webbot.com

# ===== DOCKER =====
MYSQL_ROOT_PASSWORD=your_secure_root_password_here
MYSQL_DATABASE=web_bot_multi_tenant
MYSQL_USER=webbot
MYSQL_PASSWORD=your_secure_password_here

# ===== REDIS (OPCIONAL) =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# ===== MONITORAMENTO (OPCIONAL) =====
GRAFANA_PASSWORD=your_grafana_password_here

# ===== SSL/TLS =====
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ===== LOGS =====
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== CORS =====
CORS_ORIGIN=https://webbot.com,https://www.webbot.com

# ===== BACKUP =====
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===== GATEWAYS DE PAGAMENTO =====
# SyncPay
SYNCPAY_BASE_URL=https://api.syncpayments.com.br
SYNCPAY_CLIENT_ID=your_syncpay_client_id
SYNCPAY_CLIENT_SECRET=your_syncpay_client_secret

# PushInPay
PUSHINPAY_BASE_URL=https://api.pushinpay.com.br
PUSHINPAY_PUBLIC_KEY=your_pushinpay_public_key
PUSHINPAY_SECRET_KEY=your_pushinpay_secret_key

# ===== WEBHOOKS =====
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_TIMEOUT=30000

# ===== EMAIL (OPCIONAL) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@webbot.com

# ===== ARQUIVOS =====
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf,doc,docx

# ===== CACHE =====
CACHE_TTL=3600
CACHE_MAX_SIZE=100

# ===== SESSÃO =====
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000

# ===== DESENVOLVIMENTO =====
DEBUG=false
VERBOSE_LOGGING=false




